@using CuttingOptimizer.AppLogic.Models;
@using CuttingOptimizer.Domain.Models;
<div class="container-fluid">
    <div class="row mt-5 mb-3">
        <h4 class="title-border col-12">Overzicht</h4>
        <div class="col-3 pl-3 pr-3 pt-0">
            <label class="font-weight-bold">Zaagblad: </label>
            <span>@Saw.ID</span>
        </div>
        <div class="col-3 pl-3 pr-3 pt-0">
            <label class="font-weight-bold">Zaagsnede: </label>
            <span>@Saw.Thickness mm</span>
        </div>
        <div class="col-3 pl-3 pr-3 pt-0">
            <label class="font-weight-bold">Fineer: </label>
            @if (Svgs.First().Plate.Veneer)
            {
                <span> ja</span>
            }
            else
            {
                <span> nee</span>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Saw Saw { get; set; }

    [Parameter]
    public List<Svg> Svgs { get; set; } = new List<Svg>();
}
