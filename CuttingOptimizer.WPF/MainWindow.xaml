<Window x:Class="CuttingOptimizer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuttingOptimizer.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Rectangle Width="1000" Height="50" Fill="Aqua" Canvas.Top="0" Canvas.Left="0"/>
        </Viewbox>
        <Viewbox Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
            <Rectangle Width="800" Height="50" Fill="Olive" Canvas.Top="0" Canvas.Left="0"/>
        </Viewbox>

    </Grid>
</Window>
