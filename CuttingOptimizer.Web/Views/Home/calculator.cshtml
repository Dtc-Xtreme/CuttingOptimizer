@model PlateViewModel

<div class="text-center">
    <h1 class="display-4">Calculator</h1>
</div>

<div>
    <form>
        <h2>Saw</h2>

        <div class="form-inline m-3">
            <input type="text" class="form-control" placeholder="serial" asp-for="@Model.Saw.ID">
            <input type="number" class="form-control" placeholder="thickness" asp-for="@Model.Saw.Thickness">
        </div>

        <h2>Plates <button class="btn btn-warning">Add</button></h2>
        <div class="form-inline m-2">
            <input type="text" class="form-control" placeholder="serial" disabled>
            <input type="text" class="form-control" placeholder="Width" disabled>
            <input type="text" class="form-control" placeholder="Length" disabled>
            <input type="text" class="form-control" placeholder="Height" disabled>
        </div>

        <div class="form-inline m-2">
            <input type="text" class="form-control" placeholder="serial" asp-for="@Model.Plates[0].ID">
            <input type="number" class="form-control" placeholder="Width" asp-for="@Model.Plates[0].Width">
            <input type="number" class="form-control" placeholder="Length" asp-for="@Model.Plates[0].Length">
            <input type="number" class="form-control" placeholder="Height" asp-for="@Model.Plates[0].Height">
        </div>

        <div class="form-inline m-2">
            <input type="text" class="form-control" placeholder="serial" asp-for="@Model.Plates[1].ID">
            <input type="number" class="form-control" placeholder="Width" asp-for="@Model.Plates[1].Width">
            <input type="number" class="form-control" placeholder="Length" asp-for="@Model.Plates[1].Length">
            <input type="number" class="form-control" placeholder="Height" asp-for="@Model.Plates[1].Height">
        </div>

        <div class="form-check-inline">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<div>
    @if(Model != null)
    {
        @foreach (Plate pl in Model.Plates)
        {
            <div><label>Height:</label> @pl.Height</div>
        }
    }
</div>